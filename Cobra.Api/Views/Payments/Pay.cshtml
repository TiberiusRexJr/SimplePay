@model PaymentCreateVm
@{
    ViewData["Title"] = "Pay Invoice";
}

<div class="row">
    <div class="col-12 col-lg-7 col-xl-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h1 class="h5 mb-3">Pay Invoice</h1>

                <dl class="row small">
                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">@Model.Customer</dd>
                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total.ToString("C")</dd>
                    <dt class="col-sm-3">Paid</dt>
                    <dd class="col-sm-9 text-muted">@Model.Paid.ToString("C")</dd>
                    <dt class="col-sm-3">Balance</dt>
                    <dd class="col-sm-9 fw-semibold">@Model.Balance.ToString("C")</dd>
                </dl>

                <form asp-action="Pay" method="post" class="row g-3">
                    <input type="hidden" asp-for="InvoiceId" />

                    <div class="col-6">
                        <label asp-for="Amount" class="form-label">Amount</label>
                        <input asp-for="Amount" class="form-control" step="0.01" min="0.01" max="@Model.Balance" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label asp-for="Method" class="form-label">Method</label>
                        <input asp-for="Method" class="form-control" placeholder="Card / ACH / Cash" />
                    </div>

                    <div class="col-12">
                        <label asp-for="Reference" class="form-label">Reference</label>
                        <input asp-for="Reference" class="form-control" placeholder="Txn ID / Notes" />
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit Payment</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
