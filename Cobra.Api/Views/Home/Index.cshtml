@model IEnumerable<PaymentRowVm>
@{
    ViewData["Title"] = "Recent Payments";
    var cutoffUtc = (DateTime)ViewBag.CutoffUtc;
}

<div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h1 class="h5 mb-1">Payments in the last hour</h1>
                <p class="text-muted small mb-3">
                    Payments since @cutoffUtc.ToLocalTime().ToString("g")
                </p>

                @if (!Model.Any())
                {
                    <div class="alert alert-info mb-0">No payments in the last hour.</div>
                }
                else
                {
                    <table class="table table-sm table-striped mb-0 align-middle">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Invoice</th>
                                <th class="text-end">Amount</th>
                                <th>Method</th>
                                <th>Paid At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.CustomerName</td>
                                    <td><code>@p.InvoiceId</code> </td>
                                    <td class="text-end">@p.Amount.ToString("C")</td>
                                    <td>@p.Method</td>
                                    <td>@p.PaidAt.ToLocalTime().ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
